<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.zdnuist.apkmanager.view.MyHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/item_icon"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip" />

                <TextView
                    android:id="@+id/item_apkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip" 
                    android:layout_toRightOf="@id/item_icon" />

                <TextView
                    android:id="@+id/item_pkgname"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/item_apkname" />

                <TextView
                    android:id="@+id/item_intent"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_below="@id/item_apkname"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/item_icon" 
                    android:text="intent null"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/item_del"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:text="卸载"
                android:textColor="#ffffff" />
        </LinearLayout>
    </com.zdnuist.apkmanager.view.MyHorizontalScrollView>

</RelativeLayout>